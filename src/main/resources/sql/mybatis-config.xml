		<typeAlias alias="user" 		type="com.ffin.service.domain.User" />
	</typeAliases>

	<mappers>
		<mapper resource="sql/QnAMapper.xml"/>
		<mapper resource="sql/UserMapper.xml"/>
		<mapper resource="sql/MessageMapper.xml"/>
		<mapper resource="sql/MenuMapper.xml"/>
		<mapper resource="sql/PurchaseMapper.xml"/>
		<mapper resource="sql/CateringMapper.xml"/>
		<mapper resource="sql/ReviewMapper.xml"/>
		<mapper resource="sql/TruckMapper.xml"/>
		<mapper resource="sql/PostMapper.xml"/>
	</mappers>


</configuration>