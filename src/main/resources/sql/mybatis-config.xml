		<typeAlias alias="page" 		type="com.ffin.common.Page" />
		<typeAlias alias="catering" 	type="com.ffin.service.domain.Catering" />
		<typeAlias alias="chat" 		type="com.ffin.service.domain.Chat" />
		<typeAlias alias="comment" 		type="com.ffin.service.domain.Comment" />
		<typeAlias alias="coupon" 		type="com.ffin.service.domain.Coupon" />
		<typeAlias alias="heart" 		type="com.ffin.service.domain.Heart" />
